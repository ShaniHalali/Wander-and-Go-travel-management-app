<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planesky_back"
    tools:context=".ui.flight.FlightScheduleActivity"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/flight_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/caveat"
            android:paddingBottom="16dp"
            android:text="Save flight details"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!-- Trip Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/flightTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tripTitleHeader"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/flight_Title_Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="if you like to change the flight title"
                android:background="@color/white"
                android:textSize="15sp"
                android:textColorHint="@color/black"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Airport"
            android:fontFamily="@font/concertone"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:paddingBottom="8dp"/>

        <EditText
            android:id="@+id/et_departure_airport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Departure Airport"
            android:padding="10dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Date"
            android:paddingTop="16dp"
            android:fontFamily="@font/concertone"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btn_departure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Select Departure Date"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/pink_400"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Time"
            android:paddingTop="16dp"
            android:fontFamily="@font/concertone"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btn_departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Select Departure Time"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/pink_400"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Airport"
            android:paddingTop="16dp"
            android:fontFamily="@font/concertone"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp"/>

        <EditText
            android:id="@+id/et_arrival_airport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Arrival Airport"
            android:padding="10dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Date"
            android:paddingTop="16dp"
            android:fontFamily="@font/concertone"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btn_arrival_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Select Arrival Date"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/pink_400"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Time"
            android:paddingTop="16dp"
            android:fontFamily="@font/concertone"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btn_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Select Arrival Time"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/pink_400"
            android:textColor="@android:color/white"/>




    </LinearLayout>

</ScrollView>
